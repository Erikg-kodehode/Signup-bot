<Window x:Class="BotLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BotLauncher"
        xmlns:converters="clr-namespace:BotLauncher.Converters"
        mc:Ignorable="d"
        Title="Morning Sign-In Bot Launcher" Height="600" Width="900"
        MinHeight="400" MinWidth="600"
        Loaded="Window_Loaded"
        Closing="Window_Closing">
    
    <Window.Resources>
        <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
    </Window.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Status and Control Panel -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Status Indicator -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,10,0">
                <Ellipse x:Name="StatusIndicator" Width="12" Height="12" Margin="0,0,5,0"
                         Fill="{Binding IsRunning, Converter={StaticResource BoolToColorConverter}}"/>
                <TextBlock Text="{Binding Status.StatusMessage}" VerticalAlignment="Center"/>
            </StackPanel>
            
            <!-- Uptime Display -->
            <TextBlock Grid.Column="1" Text="{Binding UptimeDisplay}" 
                     VerticalAlignment="Center" HorizontalAlignment="Center"/>
            
            <!-- Control Buttons -->
            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <Button Content="Start" Click="StartButton_Click" 
                        IsEnabled="{Binding CanStartBot}" Margin="0,0,5,0"/>
                <Button Content="Stop" Click="StopButton_Click"
                        IsEnabled="{Binding CanStopBot}"/>
            </StackPanel>
        </Grid>
        
        <!-- Log Viewer and Settings -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Log Viewer -->
            <GroupBox Grid.Column="0" Header="Bot Logs" Margin="0,0,5,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <ListBox x:Name="LogListBox" ItemsSource="{Binding LogEntries}"
                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                             VirtualizingStackPanel.IsVirtualizing="True"
                             VirtualizingStackPanel.VirtualizationMode="Recycling">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <Run Text="{Binding Timestamp, StringFormat=HH:mm:ss}" Foreground="Gray"/>
                                    <Run Text=" "/>
                                    <Run Text="{Binding Message}"/>
                                </TextBlock>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,5,0,0">
                        <Button Content="Clear Logs" Click="ClearLogs_Click"/>
                        <Button Content="Export Logs" Click="ExportLogs_Click" 
                                Margin="5,0,0,0"/>
                        <CheckBox Content="Auto-scroll" IsChecked="{Binding AutoScroll}"
                                 VerticalAlignment="Center" Margin="10,0,0,0"/>
                    </StackPanel>
                </Grid>
            </GroupBox>
            
            <!-- Settings Panel -->
            <GroupBox Grid.Column="1" Header="Settings" Margin="5,0,0,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="5">
                        <Label Content="Channel ID:"/>
                        <TextBox Text="{Binding Config.TargetChannelId, UpdateSourceTrigger=PropertyChanged}"
                                Margin="0,0,0,10"/>
                        
                        <Label Content="Guild ID:"/>
                        <TextBox Text="{Binding Config.GuildId, UpdateSourceTrigger=PropertyChanged}"
                                Margin="0,0,0,10"/>
                        
                        <Label Content="Admin Role ID:"/>
                        <TextBox Text="{Binding Config.AdminRoleId, UpdateSourceTrigger=PropertyChanged}"
                                Margin="0,0,0,10"/>
                        
                        <Label Content="Sign-in Time:"/>
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0" Text="{Binding Config.SignInHour}"/>
                            <TextBlock Grid.Column="1" Text=":" Margin="5,0" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="2" Text="{Binding Config.SignInMinute}"/>
                        </Grid>
                        
                        <Label Content="Bot Token:"/>
                        <PasswordBox x:Name="TokenBox" Margin="0,0,0,10"/>
                        
                        <CheckBox Content="Use Embedded Bot" IsChecked="{Binding Config.UseEmbeddedBot}"
                                 Margin="0,0,0,5"/>
                        
                        <Grid IsEnabled="{Binding Config.UseEmbeddedBot, Converter={StaticResource InverseBoolConverter}}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Label Grid.Row="0" Content="Custom Bot Path:"/>
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0" Text="{Binding Config.CustomBotPath, UpdateSourceTrigger=PropertyChanged}"/>
                                <Button Grid.Column="1" Content="Browse..." Click="BrowseButton_Click" Margin="5,0,0,0"/>
                            </Grid>
                        </Grid>
                        
                        <Button Content="Save Settings" Click="SaveSettings_Click"
                                Margin="0,20,0,0"/>
                    </StackPanel>
                </ScrollViewer>
            </GroupBox>
        </Grid>
    </Grid>
</Window>

